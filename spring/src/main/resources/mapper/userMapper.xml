<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.news.mapper.UserMapper">
    <resultMap id='findAllMap' type='com.test.news.dto.User'>
        <id property='userId' column='user_id' />
        <result property="email" column='email' />
        <result property="nickname" column='nickname' />
        <result property="oAuthProvider" column='oauth_provider' />
        <result property="createDate" column='create_date' />
    </resultMap>
    <insert id="joinUser" parameterType="User">
        INSERT INTO user (email, nickname, oauth_provider, create_date) VALUES (#{email}, #{nickname}, #{oAuthProvider}, now());
    </insert>
    <select id="findByEmail" parameterType="String" resultType="User">
        SELECT * FROM user WHERE email = #{email};
    </select>
    <select id="findById" parameterType="Long" resultType="User">
        SELECT * FROM user WHERE user_id = #{userId};
    </select>
    <select id="findAll" resultMap="findAllMap">
        SELECT * FROM user;
    </select>
</mapper>
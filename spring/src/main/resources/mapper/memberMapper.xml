<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.news.mapper.MemberMapper">
    <resultMap id='findAllMap' type='com.test.news.domain.Member'>
        <id property='userId' column='user_id' />
        <result property="email" column='email' />
        <result property="nickname" column='nickname' />
        <result property="oAuthProvider" column='oauth_provider' />
        <result property="createDate" column='create_date' />
        <result property="role" column='role' />
    </resultMap>
    <insert id="joinUser" parameterType="Member">
        INSERT INTO user (provider_id, email, nickname, oauth_provider, create_date) VALUES (#{providerId}, #{email}, #{nickname}, #{oAuthProvider}, now());
    </insert>
    <select id="findByEmail" parameterType="String" resultType="Member">
        SELECT * FROM user WHERE email = #{email};
    </select>
    <select id="findById" parameterType="Long" resultType="Member">
        SELECT * FROM user WHERE user_id = #{userId};
    </select>
    <select id="findPIDById" parameterType="Long" resultType="String">
        SELECT provider_id FROM user WHERE user_id = #{userId};
    </select>
    <select id="findAll" resultMap="findAllMap">
        SELECT * FROM user;
    </select>
    <update id="deleteById" parameterType="Long">
        UPDATE user SET provider_id = 0, email = null, nickname = "탈퇴한 유저" WHERE user_id = #{userId};
    </update>
    <update id="update" parameterType="Member">
        UPDATE user SET nickname = #{nickname} WHERE user_id = #{userId};
    </update>
</mapper>